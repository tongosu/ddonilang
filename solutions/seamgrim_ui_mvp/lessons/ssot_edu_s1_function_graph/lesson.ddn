채비: {
  a:수 <- 1.5. // 범위(-5, 5, 0.1)
  b:수 <- 0. // 범위(-10, 10, 0.1)
  x_min:수 <- -6. // 범위(-20, 0, 0.5)
  x_max:수 <- 6. // 범위(0, 20, 0.5)
  dx:수 <- 0.2. // 범위(0.05, 2, 0.05)
}.

(매마디)마다 {
  a <- 1.5.
  b <- 0.
  x_min <- -6.
  x_max <- 6.
  dx <- 0.2.

  x <- x_min.
  { x <= x_max }인것 동안: {
    y <- a * x + b.
    보임 {
      x: x.
      y: y.
    }.
    x <- x + dx.
  }.
