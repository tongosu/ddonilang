#이름: elem_math_mean_line_rewrite_v1
#설명: math 교과 재작성
#control: m:수=1 [-10..10] step=0.1; b:수=0 [-20..20] step=0.1; x_start:수=-5 [-20..20] step=0.5; x_end:수=5 [-20..20] step=0.5; dx:수=0.25 [0.05..1] step=0.05

m <- 1.
b <- 0.
x_start <- -5.
x_end <- 5.
dx <- 0.25.

(시작)할때 {
  x <- x_start.
}.

(매마디)마다 {
  { x <= x_end }인것 일때 {
    y <- m * x + b.
    x 보여주기.
    y 보여주기.
    x <- x + dx.
  }.
}.
